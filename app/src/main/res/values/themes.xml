<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвет фона -->
        <item name="colorPrimary">@color/white</item>

        <!-- Текст основной -->
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>

        <!-- текст в edit text -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- hint в edit text -->
        <item name="colorOnSecondaryFixed">@color/gray</item>

        <!-- кнопки -->
        <item name="colorOnSurface">@color/white</item>

        <!-- кнопки сброса и добавления в избранное -->
        <item name="colorAccent">@color/red</item>

        <!--позволяет динамически изменять фон окна приложения в соответствии с выбранной темой-->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.PracticumAndroidDiploma" parent="Base.Theme.PracticumAndroidDiploma" />
</resources>

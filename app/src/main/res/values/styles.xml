<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="toolbar">
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/TextStyleMedium22_500</item>
    </style>

    <style name="TextStyleMedium22_500" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="search_edittext_style">
        <item name="textAppearanceButton">@style/text_16_regular_400</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
    </style>

    <style name="text_12_regular_400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="text_16_regular_400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="text_16_medium_500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text_22_display_medium_500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text_32_display_bold_700">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="text_under_search">
        <item name="android:background">@drawable/shape_text_under_search</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:paddingHorizontal">@dimen/dimen_12dp</item>
        <item name="android:paddingVertical">@dimen/dimen_4dp</item>
    </style>

    <style name="filter_screen_input_layout_style">
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="android:textAppearance">@style/text_16_regular_400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="filter_screen_text_input_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/text_16_regular_400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="salary_layout_style">
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
        <item name="hintTextAppearance">@style/text_12_regular_400</item>
        <item name="boxCollapsedPaddingTop">@dimen/dimen_8dp</item>
        <item name="placeholderTextAppearance">@style/text_16_regular_400</item>
        <item name="placeholderTextColor">?attr/colorOnSecondaryFixed</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="salary_text_input_style">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/text_16_regular_400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
